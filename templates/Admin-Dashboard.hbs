<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="admin-dashboard.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <!-- Favicon -->
  <link rel="icon" href="favicon.png" type="image/jpg">
</head>

<body>
  <div class="min-h-screen flex">
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="sidebar-title">Admin Dashboard</div>
      <ul class="menu-list">
        <li class="menu-item"><i class="fa fa-user-md"></i> Manage Doctors</li>
        <li class="menu-item"><i class="fa fa-procedures"></i> Manage Patients</li>
        <li class="menu-item"><i class="fa fa-calendar-check"></i> Appointments</li>
        <li class="menu-item"><i class="fa fa-clinic-medical"></i> Departments</li>
        <li class="menu-item"><i class="fa fa-users"></i> Staff Management</li>
        <li class="menu-item"><i class="fa fa-cog"></i> Settings</li>
      </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <div class="grid">
        <!-- Doctors Card -->
        <div class="card">
          <i class="fa fa-user-md"></i>
          <div>
            <h3>Total Doctors</h3>
            <p>40</p>
          </div>
        </div>

        <!-- Patients Card -->
        <div class="card">
          <i class="fa fa-procedures"></i>
          <div>
            <h3>Total Patients</h3>
            <p>200</p>
          </div>
        </div>

        <!-- Appointments Card -->
        <div class="card">
          <i class="fa fa-calendar-check"></i>
          <div>
            <h3>Appointments Today</h3>
            <p>30</p>
          </div>
        </div>
      </div>

      <!-- Charts and Statistics -->
      <div class="grid">
        <div class="chart-card">
          <h3>Doctors by Department</h3>
          <p>Chart Placeholder</p>
        </div>

        <div class="chart-card">
          <h3>Appointments Trends</h3>
          <p>Chart Placeholder</p>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="recent-activity">
        <h3>Recent Activity</h3>
        <ul>
          <li>Dr. Amanda updated patient record for John Doe <span>10 mins ago</span></li>
          <li>New patient registered: Mary Jane <span>20 mins ago</span></li>
          <li>Appointment scheduled for James at 12:30 PM <span>30 mins ago</span></li>
          <li>Dr. Smith added a new report for Emma <span>1 hour ago</span></li>
        </ul>
      </div>
    </div>
  </div>
</body>

</html>