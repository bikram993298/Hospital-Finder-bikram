<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="login.css">

    <!-- Favicon -->
    <link rel="icon" href="favicon.png" type="image/jpg">
</head>

<body>
    <div class="container">
        <h2>Log In</h2>
        <form action="/login" method="post">
            <input type="email" name="email" placeholder="Email" required>

            <div class="password-container">
                <input type="password" id="password" name="password" placeholder="Password" required>
                <span class="toggle-password" onclick="togglePassword()">üëÅ</span> <!-- Eye icon -->
            </div>

            <input type="submit" value="Log In">
        </form>
        <a href="/signup">Create a New Account</a>
        <a href="/forgot-password">Forgot Password?</a>
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const passwordIcon = document.querySelector('.toggle-password');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordIcon.textContent = 'üôà'; // Change icon to indicate "Hide"
            } else {
                passwordInput.type = 'password';
                passwordIcon.textContent = 'üëÅ'; // Change icon back to "Show"
            }
        }
    </script>
</body>

</html>